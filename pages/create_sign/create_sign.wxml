<!--pages/create_sign/create_sign.wxml-->
<view class="page" data-weui-theme="{{theme}}">
	<view class="weui-form">
		<view class="weui-form__text-area">
			<h2 class="weui-form__title">签到</h2>
		</view>
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells">
					<view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-after">
						<view class="weui-cell__hd">
							<label class="weui-label" style="width: 3em">课程</label>
						</view>
						<view class="weui-cell__bd">
                            <picker bindchange="bindPicker3Change" range="{{array3}}">
                                <view class="weui-select">{{array3[value3]}}</view>
                            </picker>
						</view>
					</view>
					<view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-before">
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">签到地点</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="A000" bindinput="inputLoc" placeholder-class="weui-input__placeholder" />
						</view>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">							
                            <label class="weui-label">签到时间</label>
                        </view>
						<view class="weui-cell__bd">
							<picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
               				<view class="weui-select">{{time}}</view>
            	</picker>
						</view>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">							
                            <label class="weui-label">签到时长</label>
                        </view>
							<picker bindchange="bindLastChange" value="{{index}}" range="{{arraylast}}">
                			<view class="weui-select">{{arraylast[last]}}</view>
           				</picker>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">							
                            <label class="weui-label">定位信息</label>
                        </view>
						<view class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="getLocation">
							<view class="weui-cell__bd">获取</view>
							<view class="weui-cell__ft weui-cellft_in-access">({{got.longitude}},{{got.latitude}})</view>
						</view>
					</view>
					
				</view>
			</view>
		</view>		
	</view>
</view>


<navigator url="./pages/index/index" hover-class="navigator-hover">
	<view class="weui-form__opr-area">
				<a class="weui-btn weui-btn_primary" bindtap="openToast">发起签到</a>
	</view>
</navigator>




<view class="fadeIn {{hideToast ? 'fadeOut' : ''}}" wx:if="{{toast}}">
	<view class="weui-mask_transparent"></view>
	<view class="weui-toast">
		<i class="weui-icon-success-no-circle weui-icon_toast"></i>
		<view class="weui-toast__content">已发起</view>
	</view>
</view>
<view class="fadeIn {{hideLoading ? 'fadeOut' : ''}}" wx:if="{{loading}}">
	<view class="weui-mask_transparent"></view>
	<view class="weui-toast">
		<i class="weui-loading weui-icon_toast"></i>
		<view class="weui-toast__content">数据加载中</view>
	</view>
</view>



<view class="weui-cells__title">实时获取输入值：{{value1}}</view>