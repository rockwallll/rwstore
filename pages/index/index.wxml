                <view class="weui-media-box__info__meta">A201</view>
                <view class="weui-media-box__info__meta">周二</view>
                <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">16:00</view>
            </view>
          </view>
        </navigator>
      </view>
    </view>
</view>


