<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell">
    <view class="weui-cell__hd">
      <image src="/images/default_head_circle.png" style="margin-right: 15px;vertical-align: middle;width:80px; height:80px;"></image>
    </view>
    <view class="weui-cell__bd">
      <view style='font-size:20px'>{{current_course['name']?current_course['name']:"课程名称"}}</view>
