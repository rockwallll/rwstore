      <view style='font-size:13px;color:#888888'>上课教室：{{current_course['count']?current_course['count']:"未知"}}</view>
      <view style='font-size:13px;color:#888888'>教师：{{current_course['id']?current_course['id']:"未知"}}</view>
    </view>
  </view>
